<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_menu_lateral_tela_principal_usuario_responsavel"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout
        android:id="@+id/layout_tela_principal_usuario_responsavel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaPrincipalUsuarioResponsavelActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_tela_principal_usuario_responsavel"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cor_primaria"
            android:layout_alignParentTop="true">
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/layout_fragments_tela_principal_usuario_responsavel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_tela_principal_usuario_responsavel"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/nenhum_vinculo_adicionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_tela_principal_usuario_responsavel"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="@string/nenhum_vinculo_adicionado_tela_principal_usuario_responsavel"
            android:textSize="20sp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_menu_lateral_usuario_responsavel"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/cabecalho_menu_lateral"
        app:menu="@menu/menu_lateral"/>



</androidx.drawerlayout.widget.DrawerLayout>