<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_menuLateral_telaVinculosUsuarioResponsavel"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TelaVinculosResponsavelActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_usuarios_tela_vinculos"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--
            android:layout_above="@id/toolbar_TelaPrincipal"-->

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_menu_lateral_usuario_responsavel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/cabecalho_menu_lateral"
        app:menu="@menu/menu_lateral"/>

</androidx.drawerlayout.widget.DrawerLayout>
