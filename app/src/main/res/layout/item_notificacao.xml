<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    
    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/image_perfil_notificacao"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_usuario_notificacao"
        android:layout_alignTop="@id/image_perfil_notificacao"
        android:layout_toRightOf="@id/image_perfil_notificacao"
        android:layout_toEndOf="@id/image_perfil_notificacao"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:text="danesan"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/data_notificacao"
        android:layout_alignTop="@id/login_usuario_notificacao"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textStyle="italic"
        android:textSize="12sp"
        android:text="24/03/2020"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texto_notificacao"
        android:layout_below="@id/login_usuario_notificacao"
        android:layout_alignLeft="@id/login_usuario_notificacao"
        android:layout_alignStart="@id/login_usuario_notificacao"
        android:layout_marginTop="4dp"
        android:textStyle="italic"
        android:textSize="12sp"
        android:text="chegou na escola Ã s 7h20"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_below="@id/texto_notificacao"
        android:layout_marginTop="12dp"
        android:background="@color/cor_primaria" />

</RelativeLayout>