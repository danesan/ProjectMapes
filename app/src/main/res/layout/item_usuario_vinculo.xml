<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/fotoUsuarioItem"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/loginUsuarioItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/fotoUsuarioItem"
            android:layout_toEndOf="@id/fotoUsuarioItem"
            android:layout_toLeftOf="@id/adicionarSolicitacaoVinculoButton"
            android:layout_toStartOf="@id/adicionarSolicitacaoVinculoButton"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            style="@style/titulo" />

        <TextView
            android:id="@+id/nomeCompletoUsuarioItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginUsuarioItem"
            android:layout_alignLeft="@id/loginUsuarioItem"
            android:layout_alignStart="@id/loginUsuarioItem"
            android:layout_alignRight="@id/loginUsuarioItem"
            android:layout_alignEnd="@id/loginUsuarioItem"
            android:layout_toLeftOf="@id/adicionarSolicitacaoVinculoButton"
            android:layout_toStartOf="@id/adicionarSolicitacaoVinculoButton"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/solicitacaoEnviadaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomeCompletoUsuarioItem"
            android:layout_alignBottom="@id/fotoUsuarioItem"
            android:layout_alignLeft="@id/loginUsuarioItem"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:textStyle="italic"
            android:text="@string/solicitacao_enviada"
            android:gravity="bottom|end"
            android:textAlignment="viewEnd"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/adicionarSolicitacaoVinculoButton"
            android:src="@drawable/ic_person_add_blue_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/cor_primaria_selecao" />

</LinearLayout>